<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="ForestTextAdventure" package="com.digivorix.forestadventure.ForestTextAdventure" version="1.0.0" company="Toby Davis" />
	
	<!-- output -->
	<app main="com.digivorix.forestadventure.Main" file="ForestTxtAdv" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="800" height="480" unless="mobile" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	
	<!-- assets -->
	<icon path="assets/openfl.png" />
	<assets path="assets/images" rename="images" include="*.png|*.jpg|*.gif" />
	<assets path="assets/fonts" rename="fonts" include="*.png|*.fnt|*.ttf" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>